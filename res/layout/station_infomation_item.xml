<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="10dp"
    android:paddingLeft="15dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_station_infomation_item_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_blue"
            android:textSize="16sp" />

        <View style="@style/view_horizontal_line_gray" />

        <TextView
            android:id="@+id/tv_station_infomation_item_landmark"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/icon_bus" />

            <TextView
                android:id="@+id/tv_station_infomation_bus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:minHeight="30dp"
                android:textColor="@color/text_orange"
                android:textSize="16sp" />

            <com.itpoints.njmetro.view.MyGridView
                android:id="@+id/gv_station_infomation_bus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:listSelector="@color/white"
                android:numColumns="5"
                android:verticalSpacing="5dp"
                android:visibility="gone" >
            </com.itpoints.njmetro.view.MyGridView>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>