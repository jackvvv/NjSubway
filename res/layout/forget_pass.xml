<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_layout_all"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <include layout="@layout/common_headbar" />

    <View style="@style/view_horizontal_line_gray_height" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View style="@style/view_horizontal_line_gray" />

        <EditText
            android:id="@+id/et_forget_pass_phone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入手机号码"
            android:maxLength="11"
            android:numeric="integer"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <View style="@style/view_horizontal_line_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white" >

            <EditText
                android:id="@+id/et_forget_pass_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:gravity="center_vertical"
                android:hint="请输入验证码"
                android:numeric="integer"
                android:paddingLeft="10dip"
                android:singleLine="true"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_forget_pass_get_code"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_weight="0"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:background="@drawable/bg_edit_blue"
                android:paddingRight="15dp"
                android:text="获取验证码"
                android:textColor="@color/text_blue"
                android:textSize="14sp" />
        </LinearLayout>

        <View style="@style/view_horizontal_line_gray" />

        <EditText
            android:id="@+id/et_forget_pass_pass"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入新密码"
            android:maxLength="11"
            android:numeric="integer"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <View style="@style/view_horizontal_line_gray" />

        <EditText
            android:id="@+id/et_forget_pass_pass_again"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:hint="请输入确认密码"
            android:maxLength="11"
            android:numeric="integer"
            android:padding="10dp"
            android:singleLine="true"
            android:textColor="@color/text_black"
            android:textSize="14sp" />

        <View style="@style/view_horizontal_line_gray" />

        <Button
            android:id="@+id/btn_forget_pass"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:background="@color/blue"
            android:text="确定"
            android:textColor="@color/text_white"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>