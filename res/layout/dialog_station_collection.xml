<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="添加备注"
        android:textColor="@color/text_black"
        android:textSize="16sp" />

    <View style="@style/view_horizontal_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_dialog_station_collection_content"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="@null"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <View style="@style/view_horizontal_line_blue" />
    </LinearLayout>

    <View style="@style/view_horizontal_line_gray" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_dialog_station_collection_cancle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/text_black"
            android:textSize="16sp" />

        <View style="@style/view_vertical_line_gray" />

        <TextView
            android:id="@+id/tv_dialog_station_collection_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/text_blue"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>