<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <View style="@style/view_horizontal_line_gray_cross" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_collection_item_station_station"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/tv_collection_item_station_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_blue"
                android:textSize="14sp"
                android:visibility="gone" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_collection_item_station_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/arrow_right" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/iv_collection_item_station_arrow"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_line_logo_1"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_line_logo_2"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_line_logo_3"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_line_logo_4"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_line_logo_5"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="@color/text_white"
                android:visibility="gone" />
        </LinearLayout>
    </RelativeLayout>

    <View style="@style/view_horizontal_line_gray_cross" />

</LinearLayout>